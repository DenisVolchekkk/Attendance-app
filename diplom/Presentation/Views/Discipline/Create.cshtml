@model Domain.ViewModel.DisciplineViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Дисциплина</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<form asp-action="AddDisciplinesFromFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Загрузить учебный план (Excel):</label>
        <input type="file" name="file" class="form-control-file" required />
    </div>
    <button type="submit" class="btn btn-primary">Добавить дисциплины из файла</button>
</form>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
