@model Domain.ViewModel.AttendanceViewModel

@{
    ViewData["Title"] = "Delete";

    // Словарь для перевода дней недели
    var russianDayNames = new Dictionary<DayOfWeek, string>
    {
        { DayOfWeek.Sunday, "Воскресенье" },
        { DayOfWeek.Monday, "Понедельник" },
        { DayOfWeek.Tuesday, "Вторник" },
        { DayOfWeek.Wednesday, "Среда" },
        { DayOfWeek.Thursday, "Четверг" },
        { DayOfWeek.Friday, "Пятница" },
        { DayOfWeek.Saturday, "Суббота" }
    };
}

<h1>Удаление</h1>

<h3>Вы уверены?</h3>
<div>
    <h4>Посещение</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.Discipline.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Discipline.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.DayOfWeek)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Schedule?.DayOfWeek != null)
            {
                @russianDayNames[Model.Schedule.DayOfWeek.Value]
            }
            else
            {
                <text>День не указан</text>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AttendanceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AttendanceDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPresent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPresent)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к полному списку</a>
    </form>
</div>